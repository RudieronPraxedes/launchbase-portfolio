{% extends "layout.njk" %}


{% block head%}

        <title>about-Rudieron Praxedes</title>
        
        {% endblock %}


{% block content %}


<div class="wrapper">
<h1>  Videos Que Mais Gosto </h1>
</div>

<section class="cards">
    {% for item in items %}


    <div class="card" id="{{item.id}}">
        <div class="card_image-container {{'featured-wrapper' if item}}">
            <img src= "https://i.ytimg.com/vi/{{item.id}}/hqdefault.jpg" >
           
            {% if item.featured %}

                <div class="featured"> featured</div>

            {% endif %}


        </div>
    
        <div class="card_content" >
            <p>{{item.title}}</p>
    
        </div>
        <div class="card_info">
            <p>{{item.duration}}</p>
            <P class="card_price">{{item.title}}</P>
        </div>
    
     </div>
    
    {%endfor%}

</section>
    
    
    <script src="/scripts.js"></script>
    
{% endblock %}